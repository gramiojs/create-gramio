{
	"compilerOptions": {
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "ESNext",

		/* Bundler mode */
		"moduleResolution": "bundler",
		/* Linting */
		"skipLibCheck": true,
		"strict": true,
		"declaration": false,
		// "esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"baseUrl": "./src",
		"rootDir": "./src",
		"outDir": "./dist"
	},
	"include": ["src"]
}
